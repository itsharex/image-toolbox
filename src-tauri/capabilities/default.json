{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "args": true
        },
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell.exe",
          "args": true
        }
      ]
    },
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": ["**"]
    }
  ]
}